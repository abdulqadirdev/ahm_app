    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <script>
         tailwind.config = {
           theme: {
             extend: {
               colors: {
                 theme: '#e11d48',
                 themeblack: '#1d2e3c',
                 themelight: '#e84e70',
                 lightgray: '#f5f5f5',
                 gray: '#e1e1e1',
                 themextlight: '#f08ea3',
                 themexxtlight: '#f7c6d1',
               },
               objectPosition: {
                'center-bottom': 'center bottom',
            },
             }
           }
         }
